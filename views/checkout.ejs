<body>
   <!--headder-->
   <% include header %>
   <!--//headder-->
   <!-- banner -->
   <div class="inner_page-banner one-img">
   </div>
   <!-- short -->
   <div class="using-border py-3">
      <div class="inner_breadcrumb  ml-4">
         <ul class="short_ls">
            <li>
               <a href="/">Trang chủ</a>
               <span>/ /</span>
            </li>
            <li>Giỏ hàng</li>
         </ul>
      </div>
   </div>
   <!-- //short-->
   <!--Checkout-->
   <!-- //banner -->
   <!-- top Products -->
   <section class="checkout py-lg-4 py-md-3 py-sm-3 py-3">
      <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
         <div class="shop_inner_inf">
            <div class="privacy about">
               <h3><span>Giỏ hàng</span></h3>
               <form id="checkout-form" action="/payment" method="post" class="creditly-card-form agileinfo_form">
               <div class="checkout-right">
                  <table class="timetable_sub">
                     <thead>
                        <tr>
                           <th>STT</th>
                           <th>Hình Ảnh Sản Phẩm</th>
                           <th>Số Lượng</th>
                           <th>Tên Sản Phẩm</th>
                           <th>Giá</th>
                           <th>Xóa Bỏ</th>
                        </tr>
                     </thead>
                     <tbody>
                        <% var total = 0 %>
                        <% for (var i = 0; i < quantity.length; i=i+1) { %>
                        <% var price %>
                        <tr class="rem_<%= i %>">
                           <td class="invert"><%= i+1 %></td>
                           <td class="invert-image"><a href="single"><img src="<%= products[i].image %>" alt=" "
                                    class="img-responsive"></a></td>
                           <td class="invert" width="20%">
                              <div class="quantity">
                                 <div class="quantity-select">
                                    <div class="entry value-minus">&nbsp;</div>
                                    <input class="entry value" style="color: black;" readonly='' name='quantities' value="<%= quantity[i] %>"></input>
                                    <div class="entry value-plus active">&nbsp;</div>
                                    <div class='q-form' style="display: none;">
                                       <input readonly='' style="visibility: collapse;" value="<%= products[i].id %>" name="ids"></input>
                                    </div>
                                 </div>
                              </div>
                           </td>
                           <td class="invert" id="product"><%= products[i].name %></td>
                           <td class="invert"><%= price = products[i].price * quantity[i] %>đ</td>
                           <% total = total + price %>
                           <td class="invert">
                              <div class="rem">
                                 <div class="close" id="rem_<%= i %>"></div>
                              </div>
                           </td>
                        </tr>
                        <% } %>
                     </tbody>
                  </table>
               </div>
               <div class="checkout-left">
                  <div class="col-md-4 checkout-left-basket">
                     <h4>Giá tiền dự tính thanh toán</h4>
                     <ul>
                        <% for (var i = 0; i < quantity.length; i=i+1) { %>
                        <li>
                           <div class="rem_<%= i %>">
                           <div class="col-md-8" style="display:inline-block"><%= products[i].name %></div>
                           <div class="float-right" style="display:inline-block"><%= products[i].price * quantity[i] %>
                           </div>
                           </div>
                        </li>
                        <% } %>
                        <li>
                           <div class="col-md-8" style="display:inline-block"><b>Tổng tiền:</b></div>
                           <div class="float-right" style="display:inline-block"><b><%= total %></b></div>
                        </li>
                     </ul>
                  </div>
                  <div class="col-md-8 address_form">
                     <% if (user) { %>
                     <h4>Thông tin giao hàng</h4>
                        <section class="creditly-wrapper wrapper">
                           <div class="controls">
                              <label class="control-label">Địa chỉ giao hàng: </label>
                              <input class="form-control" type="text" name='address' placeholder="Nhập địa chỉ người nhận" value="<%= user.address %>">
                           </div>
                        </section>
                        <div class="checkout-right-basket">
                           <input type="submit" value="Thanh toán"></input>
                        </div>
                     <% } else { %>
                     <h4 style="color: red;">Bạn cần đăng nhập để được thanh toán đặt hàng !</h4>
                     <div class="checkout-right-basket">
                     <a type="button" style="color: seashell;" data-toggle="modal" data-target="#exampleModal"> <span
                        class="far fa-user"> Đăng nhập</span></a>
                     </div>
                     <% } %>
               </div>
               
               <div class="clearfix"></div>
               <div class="clearfix"></div>
               </form>
            </div>
         </div>
      </div>
   </section>
   <!-- Footer -->
   <% include footer%>
   <!-- //Footer -->
   <!--js working-->
   <script src='/javascripts/jquery-2.2.3.min.js'></script>
   <!--//js working-->
   <!-- cart-js -->
   <script src="/javascripts/minicart.js"></script>
